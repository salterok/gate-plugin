// A launch configuration that launches the extension inside a new window
{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}", "--enable-proposed-api=SergiySamborskiy.gate-plugin", "--inspect-extensions=9333" ]
        },
        {
            "name": "Launch extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}", "--enable-proposed-api=SergiySamborskiy.gate-plugin", "--inspect-extensions=9333" ],
            "showAsyncStacks": true,
            "skipFiles": [
                "<node_internals>/**/*.js",
                "node_modules/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to language server",
            "port": 6009,
            "timeout": 15000,
            "showAsyncStacks": true,
            "skipFiles": [
                "<node_internals>/**/*.js",
                "node_modules/**/*.js"
            ]
        },
    ],
    "compounds": [
        {
            "name": "Debug",
            "configurations": [
                "Launch extension",
                "Attach to language server"
            ]
        }
    ]
}